{
  "name": "hi-fi-prototype",
  "description": "A high-fidelity prototype for a website about fireworks displays and competitions in Plymouth.",
  "version": "1.0.0",
  "private": true,
  "repository": "rw360/hi-fi-prototype",
  "license": "UNLICENSED",
  "stackblitz": {
    "startCommand": "npm start"
  },
  "scripts": {
    "build": "npm run css",
    "ejs-compile": "ejs-cli -b templates \"*.ejs\" --out .",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css --load-path=node_modules scss/:css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace css/styles.css --use autoprefixer --map",
    "css": "npm-run-all css-compile css-prefix ejs-compile",
    "server": "sirv --dev --no-clear --port 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e ejs,scss -x \"npm run css\"",
    "test": "npm-run-all css-lint css"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "ejs": "^3.1.10",
    "ejs-cli": "^2.2.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "sass": "^1.86.3",
    "sirv-cli": "^2.0.2",
    "stylelint": "^16.9.0",
    "stylelint-config-twbs-bootstrap": "^15.0.0"
  }
}
