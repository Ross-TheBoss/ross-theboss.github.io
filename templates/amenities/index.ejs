<!doctype html>
<html lang="en" data-bs-theme="light">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/header', {page: ['amenities']}); %>

    <main>
      <div class="container py-2 px-3 mx-auto">
        <h1 class="text-center">Nearby Amenities</h1>

        <form class="row my-5">
          <div class="col-9">
            <div class="input-group">
              <input class="form-control" type="search" placeholder="Filter by event(s)" aria-label="Search">
              <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
            </div>
          </div>

          <div class="col-3">
            <div class="input-group">
              <span class="input-group-text">Sort By:</span>
              <select class="form-select" aria-label="Default select example">
                <option selected>Distance (Closest)</option>
                <option value="1">Price (Cheapest)</option>
                <option value="2">Travel Time (Shortest)</option>
              </select>
            </div>
          </div>
        </form>

        <div class="mt-5 mb-3">
          <%- include('../partials/event-card') %>
        </div>

        <div class="d-flex">
          <button class="btn btn-outline-primary rounded-5 mx-auto">
            View More <i class="bi bi-arrow-down"></i>
          </button>
        </div>
      </div>
    </main>

<%- include('../partials/footer') %>
  </body>
</html>