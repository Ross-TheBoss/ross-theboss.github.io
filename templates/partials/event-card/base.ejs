 <!-- Event Card -->
 <div class="firework-event card d-flex flex-row my-2" style="height: 16em; width: 100%;">
  <div class="card-body" style="max-width: 80%;">
    <h3 class="card-title"><%= title %></h3>
    <div class="card-subtitle mb-2 text-muted d-flex flex-wrap w-50">
      <div class="flex-fill flex-shrink-0">
        <i class="bi bi-calendar-event"></i>
        <span class="mx-2"><%= date %></span>
      </div>
      <div class="flex-fill flex-shrink-0">
        <i class="bi bi-clock"></i>
        <span class="mx-2"><%= time %></span>
      </div>
    </div>
    <p class="card-text d-inline" style="max-width: 100%;"><%= description %></p>
    <div class="ms-auto me-0" style="width: fit-content;">
      <a href="/events/<%= slug %>" class="btn btn-primary d-block">More Details</a>
    </div>
  </div>

  <div class="flex-shrink-0">
    <svg class="bd-placeholder-img card-img-top" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect></svg>
  </div>
</div>