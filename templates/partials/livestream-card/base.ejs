<div class="flex-shrink-0 livestream-card border border-2 border-primary"
     data-event="<%= event %>"
     data-year="<%= year %>">
    <div class="ratio ratio-16x9">
        <img class="bd-placeholder-img card-img-top object-fit-cover" src="<%= img_src %>" alt="<%= img_alt %>" width="100%" height="100%"></img>
    </div>

    <div class="z-1 pe-none fw-bold d-flex livestream-card-overlay">
        <h2 class="ms-2 me-2 mt-2 mb-auto"><%= title %></h2>
    </div>

    <div class="z-1 position-absolute d-flex pe-none bottom-0 end-0 livestream-card-btn">
        <a href="archive/livestreams/<%= slug %>" class="btn btn-primary me-2 mb-2 pe-auto">Watch</a>
    </div>
</div>