  <body>
<%- include('../../partials/header', {page: ['events', 'bonfire night 2025']}); %>

    <main>
      <div class="modal" id="shareModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header bg-primary">
              <h5 class="modal-title text-white">Share</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="input-group">
                <a class="form-control" href="http://localhost:3000/events/bonfire-night-2025">http://localhost:3000/events/bonfire-night-2025</a>
                <a class="btn btn-primary" 
                   type="button"
                   role="button"
                   tabindex="0"
                   data-bs-toggle="popover"
                   data-bs-trigger="focus"
                   data-bs-content="Link copied to clipboard"
                   onclick="navigator.clipboard.writeText('http://localhost:3000/events/bonfire-night-2025')"><i class="bi bi-copy"></i></a>
              </div>

              <button class="btn btn-primary d-block w-100 my-4" onclick="window.print();" data-bs-dismiss="modal">Print <i class="bi bi-printer-fill"></i></button>

              <div class="d-flex m-5 justify-content-center">
                <button class="btn btn-outline-primary social-share-btn d-block m-2">
                  <i class="bi bi-facebook d-block w-100 display-5" style="color: #1977f3"></i>
                  Facebook
                </button>
                <button class="btn btn-outline-primary social-share-btn d-block m-2">
                  <i class="bi bi-twitter d-block w-100 display-5" style="color: #1da1f2"></i>
                  Twitter 
